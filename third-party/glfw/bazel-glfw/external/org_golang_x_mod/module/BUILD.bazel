load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "module",
    srcs = ["module.go"],
    importpath = "golang.org/x/mod/module",
    visibility = ["//visibility:public"],
    deps = [
        "//semver",
        "@org_golang_x_xerrors//:go_default_library",
    ],
)

alias(
    name = "go_default_library",
    actual = ":module",
    visibility = ["//visibility:public"],
)

go_test(
    name = "module_test",
    srcs = ["module_test.go"],
    embed = [":module"],
)
