load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library", "go_test")

go_library(
    name = "tomljson_lib",
    srcs = ["main.go"],
    importpath = "github.com/pelletier/go-toml/cmd/tomljson",
    visibility = ["//visibility:private"],
    deps = ["//:go-toml"],
)

go_binary(
    name = "tomljson",
    embed = [":tomljson_lib"],
    visibility = ["//visibility:public"],
)

go_test(
    name = "tomljson_test",
    srcs = ["main_test.go"],
    embed = [":tomljson_lib"],
)
